generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model employees {
  id        Int     @id @default(autoincrement())
  username  String? @db.VarChar(20)
  password  String? @db.VarChar(68)
  fname     String? @db.VarChar(20)
  lname     String? @db.VarChar(20)
  privilege String? @db.VarChar(10)
}

model Inventory {
  id                   Int      @id @default(autoincrement())
  name                 String
  info                 String?  @db.Text
  sku                  String?
  price                Int      
  manual_sale          Int      
  on_sale              Boolean  @default(false)
  cost                 Int      @default(0)
  deliverable          Boolean  @default(true)
  count                Int      @default(0) // Changed to Int
  type                 String
  subtype              String
  in_store_warranty    Int      @default(0)
  parts_labor_warranty Int      @default(0)
  photos               String[] 
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model product_types {
  id   Int     @id @default(autoincrement())
  name String? @unique(map: "constraint_name") @db.VarChar(30)
}

model specials {
  id          Int      @id @default(autoincrement())
  name        String?  @db.VarChar(30)
  info        String?  @db.VarChar(100)
  textcolor   String?  @db.VarChar(10)
  bgimage     String?  @db.VarChar(255)
  current     Boolean?
  sales_price Int?
}

model subtypes {
  id           Int      @id @default(autoincrement())
  product_type String?  @unique(map: "unique_product_type") @db.VarChar(50)
  subtype      String[]
}
